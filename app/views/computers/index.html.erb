<% title "Computers" %>

<table>
  <tr>
    <th>FQDN</th>
    <th>Overall</th>
    <th>SCOM</th>
    <th>Akorri<br />Storage</th>
    <th>EPO<br />DAT</th>
    <th>EPO<br />Update</th>
  </tr>
  <% for computer in @computers %>
    <tr>
      <td><%= link_to computer.fqdn, computer %></td>
      <td class="health"><%= food_icon(computer.health) %></td>
      <td class="health"><%= computer.scom_computer ? food_icon(computer.scom_computer.health) : food_icon(4) %></td>
      <td class="health"><%= computer.akorri_server_storage ? food_icon(computer.akorri_server_storage.health) : food_icon(4) %></td>
      <td class="health"><%= computer.epo_computer ? food_icon(computer.epo_computer.dat_health) : food_icon(5) %></td>
      <td class="health"><%= computer.epo_computer ? food_icon(computer.epo_computer.update_health) : food_icon(5) %></td>
    </tr>
  <% end %>
</table>