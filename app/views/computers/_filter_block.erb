<ul>
  <%= content_tag(:li, link_to_unless_current("All", :controller => 'computers', :owner_initials => params[:owner_initials],
                                      :status => nil))%>
<% Computer.aasm_states_for_select.each do |s| %>
  <%= content_tag(:li, link_to_unless_current(s[0], :controller => 'computers', :owner_initials => params[:owner_initials],
                                     :status => s[1])) %>
<% end %>
</ul>
<ul>
  <%= content_tag(:li, link_to_unless_current("All", :controller => 'computers', :owner_initials => nil,
                                      :status => params[:status]))%>
<% Owner.all.each do |owner| %>
  <%= content_tag(:li, link_to_unless_current(owner.name, :controller => 'computers', :owner_initials => owner.initials, 
                              :status => params[:status]))%>
<% end %>
</ul>